{
  "name": "Imperial to Metric Converter",
  "description": "Automatically converts imperial units to metric units in the context menu when text is selected.",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["converter.js"]
    }
  ],
  "action": {
    "default_popup": "converter.html",
    "default_icon": {
      "16": "converter.png",
      "32": "converter.png",
      "48": "converter.png",
      "128": "converter.png"
    }
  },
  "icons": {
    "16": "converter.png",
    "32": "converter.png",
    "48": "converter.png",
    "128": "converter.png"
  }
}