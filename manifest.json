{
  "name": "Converter",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["converter.js"]
    }
  ],
  "action": {
    "default_popup": "converter.html",
    "default_icon": "converter.png"
  }
}